<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.konggit.appnot">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SharedPreferencesListActivity">
        </activity>
        <activity android:name=".InternalStorageListActivity">
        </activity>
        <activity android:name=".ExternalStorageListActivity">
        </activity>
        <activity android:name=".SQLiteSingleStorageListActivity">
        </activity>
        <activity android:name=".SQLiteMultiStorageListActivity">
        </activity>
    </application>

</manifest>